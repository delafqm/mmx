<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mmx.Views.SpeechPage">
    <ContentPage.Content>
        <StackLayout>
            <Editor Text="显示内容"
                    x:Name="InputText"
                    WidthRequest="300"
                    HeightRequest="120"
                    FontAttributes="Bold" 
                    FontSize="20" 
                    HorizontalOptions="CenterAndExpand"/>
            <StackLayout Orientation="Horizontal">
                <Button HorizontalOptions="CenterAndExpand" Clicked="OnSpeakClicked" Text="正常"/>
                <Button HorizontalOptions="CenterAndExpand" Clicked="OnSlowSpeakClicked" Text="慢速"/>
                <Button HorizontalOptions="CenterAndExpand" Clicked="OnSuperSlowSpeakClicked" Text="超慢"/>
            </StackLayout>
            <StackLayout Margin="10" Orientation="Horizontal">
                <Label HorizontalOptions="CenterAndExpand" Text="状态1"/>
                <Label HorizontalOptions="CenterAndExpand" Text="状态2"/>
            </StackLayout>

            <Label BackgroundColor="Tomato" Margin="20" Text="自动识别内容" 
                   x:Name="OutputText"
                   LineBreakMode="WordWrap"
                   FontAttributes="Bold" 
                   FontSize="20" 
                   HorizontalOptions="CenterAndExpand"/>
            
            <Button x:Name="btnStart" VerticalOptions="EndAndExpand" Text="开始录音" Clicked="OnStartClicked"/>
            <Button x:Name="btnStop" VerticalOptions="EndAndExpand" Text="结束录音" Clicked="OnStopClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>