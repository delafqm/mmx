
@{
    ViewData["Title"] = "Edit";
}
@model mmx.mvc.Models.Lessons
<h2>Edit</h2>
@using (Html.BeginForm())

{

    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label class="control-label">上级ID</label>
        @Html.DropDownListFor(o => o.Sid, ViewBag.SidList as IEnumerable<SelectListItem>, new { @class = "form-control" })
    </div>
    <div class="form-group">

        <label class="control-label">名称</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">

        <label class="control-label">内容</label>

        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">类型</label>
        @Html.DropDownListFor(o => o.Types, ViewBag.TypeList as IEnumerable<SelectListItem>, new { @class = "form-control" })
    </div>
    <hr />

    <div class="form-group">

        <input type="submit" value="编辑" class="form-control" />

    </div>
    <hr />
}

<div class="form-group">@Html.ActionLink("Back to List", "Index")</div>
